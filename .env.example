# Server Configuration
# Copy this file to .env and modify the values 

# Server Environment - shows in the welcome message
# Options: "Public Stable", "Internal Testing", "Development", etc.
SERVER_ENV=Public Stable

# Server connection details - used for SSH connection strings
SERVER_HOST=play.poker.qincai.xyz
SERVER_PORT=23456

# Display name for the server - shown in welcome message
SERVER_NAME=Poker-over-SSH Public Server

# AI Configuration
# OpenAI-compatible API endpoint for AI players
AI_API_BASE_URL=https://ai.qincai.xyz/v1
AI_API_KEY=ur_api_key

# Alternative AI configurations (if primary endpoint is blocked)
# Uncomment and use one of these if the primary endpoint doesn't work:

# Option 1: Direct OpenAI API (requires real OpenAI API key)
# AI_API_BASE_URL=https://api.openai.com/v1
# AI_API_KEY=sk-your-real-openai-api-key-here

# Option 2: Local AI server (like Ollama, LocalAI, etc.)
# AI_API_BASE_URL=http://localhost:11434/v1
# AI_API_KEY=not-needed-for-local

# Option 3: Other OpenAI-compatible services
# AI_API_BASE_URL=https://api.groq.com/openai/v1
# AI_API_KEY=your-groq-api-key

# AI Model Configuration
AI_MODEL=llama-3.1-8b-instant
AI_TIMEOUT=3
AI_MAX_RETRIES=3

# Healthcheck configuration
# Port for the HTTP healthcheck server (DIFFERENT from SSH port!!!)
HEALTHCHECK_PORT=23457
# Probe interval in seconds
HEALTHCHECK_INTERVAL=60
HEALTHCHECK_CORS_ORIGIN=https://poker.qincai.xyz